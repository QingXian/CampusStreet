<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@color/colorWhite"
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/iv_head"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/ic_head_test"/>
    <TextView
        android:textColor="@color/colorBlack"
        android:id="@+id/tv_name"
        android:paddingTop="8dp"
        android:paddingLeft="24dp"
        android:layout_toRightOf="@+id/iv_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        />
    <TextView
        android:drawablePadding="8dp"
        android:drawableLeft="@drawable/ic_association_num"
        android:id="@+id/tv_association_num_hint"
        android:gravity="center"
        android:layout_below="@+id/tv_name"
        android:paddingLeft="24dp"
        android:paddingTop="16dp"
        android:layout_toRightOf="@+id/iv_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/act_association_num_hint"/>
    <TextView
        android:paddingTop="16dp"
        android:id="@+id/tv_association_num"
        android:gravity="center"
        android:layout_below="@+id/tv_name"
        android:layout_toRightOf="@+id/tv_association_num_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
</RelativeLayout>