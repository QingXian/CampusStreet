<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@color/colorWhite"
                android:orientation="vertical"
                android:padding="16dp">

    <ImageView
        android:background="@drawable/ic_head_test"
        android:id="@+id/iv_head"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/iv_head"
        android:layout_toLeftOf="@+id/tv_wages"
        android:layout_toRightOf="@+id/iv_head"
        android:ellipsize="end"
        android:maxEms="8"
        android:maxLines="1"
        android:paddingLeft="16dp"
        android:textColor="@color/colorBlack"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/tv_company"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_title"
        android:layout_toRightOf="@+id/iv_head"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingLeft="16dp"
        android:paddingTop="8dp"
        />

    <TextView
        android:id="@+id/tv_release_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_company"
        android:layout_toRightOf="@+id/iv_head"
        android:paddingLeft="16dp"
        android:paddingTop="8dp"
        />

    <TextView
        android:ellipsize="end"
        android:maxLines="1"
        android:id="@+id/tv_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_release_time"
        android:layout_toRightOf="@+id/iv_head"
        android:paddingLeft="16dp"
        android:paddingTop="8dp"
        />

    <TextView
        android:id="@+id/tv_requirement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_company"
        android:layout_toRightOf="@+id/tv_release_time"
        android:maxLines="1"
        android:paddingLeft="16dp"
        android:paddingTop="8dp"
        />

    <TextView
        android:id="@+id/tv_wages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textColor="@color/colorOrange"
        />
</RelativeLayout>