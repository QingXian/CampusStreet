<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginTop="1dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
    <ImageView
        android:id="@+id/iv_head"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/ic_head_test"/>
    <TextView
        android:textColor="@color/colorBlack"
        android:id="@+id/tv_title"
        android:paddingTop="8dp"
        android:paddingLeft="24dp"
        android:layout_toRightOf="@+id/iv_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        />
    <LinearLayout
        android:id="@+id/ll_bounty_content"
        android:paddingLeft="16dp"
        android:layout_toRightOf="@+id/iv_head"
        android:layout_alignBottom="@+id/iv_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:gravity="bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/act_my_bounty_hall_demand"/>
    <TextView
        android:id="@+id/tv_demand_num"
        android:gravity="bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:gravity="bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/act_my_bounty_hall_demand_unit"/>
        <TextView
            android:paddingLeft="16dp"
            android:gravity="bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/act_my_bounty_hall_cost"/>
        <TextView
            android:id="@+id/tv_cost_num"
            android:gravity="bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:paddingLeft="16dp"
            android:gravity="bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/act_my_bounty_hall_end_time"/>
        <TextView
            android:id="@+id/tv_end_time"
            android:gravity="bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
    <ImageView
        android:layout_alignParentRight="true"
        android:layout_above="@+id/ll_bounty_content"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/ic_arrow_right"
        />
</RelativeLayout>