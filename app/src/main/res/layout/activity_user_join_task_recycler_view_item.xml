<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginTop="8dp"
                android:background="@color/colorWhite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_head"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_head_test"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>
    <TextView
        android:textSize="16sp"
        android:textColor="@color/colorBlack"
        android:paddingLeft="8dp"
        android:id="@+id/tv_name"
        android:paddingTop="4dp"
        android:layout_toRightOf="@+id/iv_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="昵称"/>
    <ImageView
        android:layout_alignBottom="@+id/tv_name"
        android:layout_toRightOf="@id/tv_name"
        android:id="@+id/iv_privilege"
        android:layout_width="16dp"
        android:layout_height="24dp"/>
    <TextView
        android:visibility="gone"
        android:paddingLeft="8dp"
        android:id="@+id/tv_department"
        android:paddingTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="13信息院"
        android:layout_below="@+id/tv_name"
        android:layout_toRightOf="@+id/tv_time"
        />
    <TextView
        android:textColor="@color/colorBlack"
        android:paddingTop="8dp"
        android:text="标题标题标题"
        android:layout_below="@id/iv_head"
        android:id="@+id/tv_title"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textSize="16sp"
        android:ellipsize="end"
        android:id="@+id/tv_content"
        android:maxLines="3"
        android:paddingTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="内容"
        android:layout_below="@+id/tv_title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>
    <ImageView
        android:visibility="gone"
        android:src="@drawable/ic_leave_message"
        android:layout_toLeftOf="@+id/tv_message"
        android:layout_alignBottom="@+id/tv_message"
        android:layout_width="16dp"
        android:layout_height="16dp"/>
    <TextView
        android:visibility="gone"
        android:paddingLeft="8dp"
        android:id="@+id/tv_message"
        android:text="@string/act_buy_zone_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/iv_ic_time"/>
</RelativeLayout>