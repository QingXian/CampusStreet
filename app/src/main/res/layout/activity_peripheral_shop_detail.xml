<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:background="@color/colorGray"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <include layout="@layout/toolbar"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/iv_photo"
        android:background="@drawable/bg_test"
        android:layout_width="match_parent"
        android:layout_height="160dp"/>
        <TextView
            android:layout_alignBottom="@+id/iv_photo"
            android:paddingLeft="40dp"
            android:background="@color/tv_color_peripheral_shop_detail_name"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:textSize="20sp"
            android:textColor="@color/colorWhite"
            android:text="蘑菇街"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <android.support.design.widget.TabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:tabMode="scrollable"
        app:tabIndicatorHeight="0dp"
        app:tabSelectedTextColor="@color/colorPrimary"
        />

    <LinearLayout
        android:visibility="gone"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        android:id="@+id/ll_shop_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="16sp"
            android:padding="8dp"
            android:background="@color/colorWhite"
            android:text="电话：123213123"
            android:id="@+id/tv_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:padding="8dp"
            android:background="@color/colorWhite"
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="1"
                android:textSize="16sp"
                android:background="@color/colorWhite"
                android:text="地址：登高西路"
                android:id="@+id/tv_position"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:gravity="right"
                android:id="@+id/ll_grade_content"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_star1"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@mipmap/ic_launcher"/>
                <ImageView
                    android:id="@+id/iv_star2"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@mipmap/ic_launcher"/>
                <ImageView
                    android:id="@+id/iv_star3"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@mipmap/ic_launcher"/>
                <ImageView
                    android:id="@+id/iv_star4"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@mipmap/ic_launcher"/>
                <ImageView
                    android:id="@+id/iv_star5"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@mipmap/ic_launcher"/>
                <TextView
                    android:textSize="12sp"
                    android:paddingLeft="8dp"
                    android:id="@+id/tv_grade"
                    android:text="4.2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textSize="12sp"
                    android:text="@string/act_peripheral_shop_grade_symbol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_marginTop="4dp"
            android:textSize="16sp"
            android:padding="8dp"
            android:background="@color/colorWhite"
            android:text="营业时间 10:30——23:30"
            android:id="@+id/tv_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="4dp"
            android:textSize="16sp"
            android:padding="8dp"
            android:background="@color/colorWhite"
            android:text="营业类型：营业执照"
            android:id="@+id/tv_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/rl_commodity_content"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </RelativeLayout>
</LinearLayout>