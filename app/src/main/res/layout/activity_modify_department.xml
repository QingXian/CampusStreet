<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <include layout="@layout/toolbar"/>
    <LinearLayout
        android:background="@drawable/bg_act_modify_nickname_tv"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:textColor="@color/colorBlack"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textSize="18sp"
            android:background="@drawable/bg_act_modify_nickname_hint"
            android:text="@string/act_modify_department_hint"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="48dp"/>

        <TextView
            android:id="@+id/tv_department"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="3"
            android:paddingBottom="12dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="12dp"
            android:text="信息院"
            android:textColor="@color/colorBlack"
            android:textSize="18sp"/>

        <Button
            android:layout_marginRight="12dp"
            android:id="@+id/btn_department"
            android:layout_width="12dp"
            android:layout_height="8dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/ic_drop_down"
            />
    </LinearLayout>

    <Button
        android:id="@+id/btn_save"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:background="@color/colorPrimary"
        android:text="保存"
        android:textColor="@color/colorWhite"
        android:textSize="18sp"/>
    <include layout="@layout/progress_bar">
    </include>
</LinearLayout>