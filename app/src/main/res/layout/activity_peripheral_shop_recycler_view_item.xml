<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:padding="16dp"
                android:background="@color/colorWhite"
              android:layout_marginTop="1dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <ImageView
        android:src="@drawable/ic_head_test"
        android:id="@+id/iv_photo"
        android:layout_width="72dp"
        android:layout_height="64dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>
    <TextView
        android:id="@+id/tv_name"
        android:paddingLeft="8dp"
        android:paddingTop="4dp"
        android:text="蘑菇街"
        android:layout_toRightOf="@+id/iv_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:id="@+id/ll_grade_content"
        android:paddingLeft="8dp"
        android:paddingTop="4dp"
        android:layout_toRightOf="@+id/iv_photo"
        android:layout_below="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_star1"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/ic_star_fill"/>
        <ImageView
            android:id="@+id/iv_star2"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/ic_star"/>
        <ImageView
            android:id="@+id/iv_star3"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/ic_star"/>
        <ImageView
            android:id="@+id/iv_star4"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/ic_star"/>
        <ImageView
            android:id="@+id/iv_star5"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/ic_star"/>
        <TextView
            android:textSize="12sp"
            android:paddingLeft="8dp"
            android:id="@+id/tv_grade"
            android:text="4.2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="12sp"
            android:text="@string/act_peripheral_shop_grade_symbol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <TextView
        android:paddingTop="4dp"
        android:layout_below="@+id/ll_grade_content"
        android:layout_toRightOf="@+id/iv_photo"
        android:paddingLeft="8dp"
        android:text="@string/act_peropheral_shop_bussiness_hours_hint"
        android:textSize="12sp"
        android:id="@+id/tv_business_hours_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:paddingTop="4dp"
        android:layout_below="@+id/ll_grade_content"
        android:layout_toRightOf="@+id/tv_business_hours_hint"
        android:paddingLeft="8dp"
        android:text="10:30-23:00"
        android:textSize="12sp"
        android:id="@+id/tv_business_hours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textSize="12sp"
        android:textColor="@color/colorOrange"
        android:text="美食"
        android:layout_below="@id/tv_business_hours"
        android:layout_alignParentRight="true"
        android:id="@+id/tv_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:visibility="gone"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:drawableLeft="@drawable/ic_discount"
        android:id="@+id/tv_introduce"
        android:padding="8dp"
        android:layout_below="@+id/tv_business_hours_hint"
        android:layout_toRightOf="@+id/iv_photo"
        android:paddingLeft="8dp"
        android:text="新用户立减8元新用户立减8元新用户立减8元新用户立减8元"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>