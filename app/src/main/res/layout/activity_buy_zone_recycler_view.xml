<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
                android:layout_marginTop="2dp"
                android:padding="16dp"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_head"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_head_test"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>
    <TextView
        android:textSize="16sp"
        android:textColor="@color/colorBlack"
        android:paddingLeft="8dp"
        android:id="@+id/tv_name"
        android:paddingTop="4dp"
        android:layout_toRightOf="@+id/iv_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="昵称"/>
    <ImageView
        android:layout_alignBottom="@+id/tv_name"
        android:layout_toRightOf="@id/tv_name"
        android:id="@+id/iv_privilege"
        android:layout_width="16dp"
        android:layout_height="24dp"/>
    <TextView
        android:paddingLeft="8dp"
        android:id="@+id/tv_time"
        android:paddingTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4小时"
        android:layout_below="@+id/tv_name"
        android:layout_toRightOf="@+id/iv_head"
        android:layout_toEndOf="@+id/iv_head"/>
    <TextView
        android:id="@+id/tv_time_hint"
        android:paddingTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/act_buy_zone_time_hint"
        android:layout_below="@+id/tv_name"
        android:layout_toRightOf="@+id/tv_time"
        android:layout_toEndOf="@+id/tv_time"/>

    <TextView
        android:textColor="@color/colorBlack"
        android:ellipsize="end"
        android:id="@+id/tv_content"
        android:padding="16dp"
        android:lines="3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="要求要求要求要求要求要求"
        android:layout_below="@+id/iv_head"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>
    <TextView
        android:drawablePadding="8dp"
        android:gravity="bottom"
        android:drawableLeft="@drawable/ic_postion"
        android:textColor="@color/colorBlack"
        android:padding="8dp"
        android:text="龙岩学院"
        android:layout_below="@+id/tv_content"
        android:id="@+id/tv_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <LinearLayout
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/tv_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <!--<TextView-->
            <!--android:text="@string/act_buy_zone_liked"-->
            <!--android:textColor="@color/colorBlack"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"/>-->
        <!--<TextView-->
            <!--android:text="2"-->
            <!--android:id="@+id/tv_liked_num"-->
            <!--android:textColor="@color/colorBlack"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"/>-->
        <TextView
            android:paddingLeft="16dp"
            android:text="@string/act_buy_zone_message"
            android:textColor="@color/colorBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="2"
            android:id="@+id/tv_message_num"
            android:textColor="@color/colorBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <TextView
        android:layout_toLeftOf="@+id/tv_expected_price_symbol"
        android:textColor="@color/colorBlack"
        android:id="@+id/tv_expected_price_hint"
        android:padding="8dp"
        android:text="@string/act_buy_zone_expected_price"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_expected_price_symbol"
        android:paddingTop="8dp"
        android:textColor="@color/colorRed"
        android:text="@string/frag_campus_recruitment_wages_symbol"
        android:layout_toLeftOf="@+id/tv_expected_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:textColor="@color/colorRed"
        android:id="@+id/tv_expected_price"
        android:paddingTop="8dp"
        android:paddingRight="16dp"
        android:paddingLeft="4dp"
        android:text="100"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>